<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <com.facebook.drawee.view.SimpleDraweeView
              android:id="@+id/video_draw"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_margin="5dp"/>

          <LinearLayout
              android:layout_width="200dp"
              android:layout_height="50dp"
              android:layout_marginLeft="60dp"
              android:orientation="vertical">
               <TextView
                   android:id="@+id/video_tv1"
                   android:layout_marginTop="10dp"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="456"
                   android:textSize="14dp"/>

               <TextView
                   android:id="@+id/video_tv2"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="456"
                   android:textSize="12dp"/>
          </LinearLayout>

          <ImageView
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:src="@drawable/gz01"
              android:layout_margin="8dp"
              android:layout_alignParentRight="true"
              />
     </RelativeLayout>
     <TextView
         android:id="@+id/video_tv3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="15dp"
         android:layout_margin="3dp"
         android:layout_gravity="center_horizontal"
         android:text="打发士大夫答复"/>

     <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
         android:id="@+id/jcPlayer"
         android:layout_marginTop="3dp"
         android:layout_width="match_parent"
         android:layout_height="180dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

     <View
         android:layout_width="match_parent"
         android:layout_marginTop="8dp"
         android:layout_height="0.75dp"
         android:background="#000"/>
</LinearLayout>
